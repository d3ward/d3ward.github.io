---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/Hero.astro";
import StatsGrid from "@components/home/StatsGrid.astro";
import ProjectFilter from "@components/home/ProjectFilter.astro";
import ProjectGrid from "@components/home/ProjectGrid.astro";
---

<Layout
  seo={{
    title: "d3ward - Home",
    description:
      "Explore my portfolio, where each project blends code, creativity, open source collaboration and a commitment to building a user-friendly, privacy-centric web.",
    url: "https://d3ward.github.io",
    keywords: "contributor,developer,Floatly,NextNTP,Toolz,Techlore,Kiwi Browser",
  }}
>
  <Hero>
    <StatsGrid />
  </Hero>

  <!-- Divider -->
  <hr class="border-base-300 my-12" />

  <!-- Projects Section -->
  <section class="py-12 text-center">
    <div class="container mx-auto px-4">
      <h2 class="mb-8 text-4xl font-bold">Projects</h2>

      <!-- Filter Buttons -->
      <ProjectFilter />

      <!-- Projects Grid -->
      <ProjectGrid />
    </div>
  </section>
</Layout>
