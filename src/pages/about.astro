          </g>
        </svg>
      </div>
    </section>

    <!-- About Cards Section -->
    <section class="py-12 bg-base-200">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {aboutCards.map((card, index) => (
            <div class={`card bg-base-100 shadow-xl _aos-${index % 2 === 0 ? 'left' : 'right'}`}>
              <div class="card-body">
                <h2 class="card-title text-2xl mb-4">{card.title}</h2>
                <div class="prose" set:html={card.content} />
