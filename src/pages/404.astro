---
import Layout from "@layouts/Layout.astro";
import Button from "@components/common/Button.astro";
---

<Layout
  seo={{
    title: "404 - Page Not Found",
    description: "The page you're looking for doesn't exist.",
    url: "https://d3ward.github.io/404",
  }}
>
  <main class="flex min-h-screen items-center justify-center">
    <div class="px-4 text-center">
      <h1 class="text-primary mb-4 text-9xl font-bold">404</h1>
      <h2 class="mb-4 text-3xl font-bold">Page Not Found</h2>
      <p class="mb-8 text-lg opacity-70">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <Button href="/" size="lg" icon="arrow-left"> Back to Home </Button>
    </div>
  </main>
</Layout>
